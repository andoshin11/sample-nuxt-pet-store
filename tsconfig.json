{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "strictPropertyInitialization": false,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitThis": true,
    "allowJs": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "outDir": "lib",
    "paths": {
      "@/*": ["app/*"],
      "~/*": ["app/*"]
    },
    "types": ["@nuxt/vue-app", "node", "jest"]
  },
  "include": ["app/**/*.ts", "app/**/*.vue", "app/types/*.d.ts", "test/**/*.ts"]
}
